---
import type { GetStaticPathsOptions } from "astro";
import { getCollection } from "astro:content";
import Layout from "@/layouts/SpecialsLayout.astro";
import Heading from "@/components/Heading.astro";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const posts = (await getCollection("specials")).sort(
    (a: any, b: any) => b.data.date.valueOf() - a.data.date.valueOf()
  );

  return paginate(posts, { pageSize: 5 });
}

const { page } = Astro.props;
const prevUrl = page.url.prev;
const nextUrl = page.url.next;
---

<Layout>
  <section class="message">
    <Heading en="Event Information" ja="イベントのご案内" />

    <p>
      初めて教会を訪れる方や、まだ教会に慣れていない方にもご理解いただきやすいように、特別礼拝を定期的に開催しています。
    </p>
    <p>また、賛美コンサートや食事会、子供向けの遠足なども行っています。</p>
  </section>

  <section class="articles">
    <ul>
      {
        page.data.map((post: any) => (
          <li class="li">
            <h3 class="h3">{post.data.title}</h3>

            <a class="a" href={`/specials/${post.slug}/`}>
              <figure>
                <img src={post.data.cover.src} alt="" />
              </figure>
            </a>
          </li>
        ))
      }
    </ul>

    <div class="pagination">
      <a href={prevUrl} class:list={["link", { hidden: !prevUrl }]}> ← </a>
      <a href={nextUrl} class:list={["link", { hidden: !nextUrl }]}> → </a>
    </div>
  </section>
</Layout>

<style>
  .message {
    margin: 0 5%;
    padding: 10vh 5vw;
    text-align: justify;
  }

  .articles {
    padding: 10vh 5vw;
  }

  .li {
    border-top: var(--color-accent-complement) dotted 1px;
    padding: 5vh 0;
  }

  .h3 {
    color: var(--color-accent);
    font-size: 125%;
    margin: 0;
    text-align: center;
  }

  .a {
    display: block;
  }

  .pagination {
    display: flex;
    padding: 0 0 25vh;
    justify-content: space-between;
  }

  .link {
    background: var(--color-accent);
    color: var(--color-background);
    border-radius: 4px;
    font-weight: bolder;
    line-height: 40px;
    text-align: center;
    width: 40px;
  }

  .hidden {
    visibility: hidden;
  }
</style>
